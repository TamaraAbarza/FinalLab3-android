<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F7"
    tools:context=".ui.organizador.evento.CrearEventoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Registrar Nuevo Evento"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNombreEvento"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_edittext"
            android:hint="Nombre del evento"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#B87C7C" />

        <LinearLayout
            android:id="@+id/layoutFoto"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_dashed_border">

            <TextView
                android:id="@+id/tvAddPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Photo"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvSubPhoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subí una foto del evento"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:layout_marginTop="4dp"/>

            <ImageView
                android:id="@+id/ivFoto"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:visibility="gone"
                tools:src="@tools:sample/avatars" />

            <!-- Botón de carga -->
            <Button
                android:id="@+id/btnFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Upload"
                android:layout_marginTop="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
        </LinearLayout>

        <!-- Descripción -->
        <EditText
            android:id="@+id/etDescripcionEvento"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:gravity="top|start"
            android:hint="Descripción"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#B87C7C" />

        <!-- Fecha y Hora -->
        <LinearLayout
            android:id="@+id/layoutFechaHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <EditText
                android:id="@+id/etFechaEvento"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext"
                android:hint="Fecha (YYYY-MM-DD)"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="#B87C7C" />

            <Space
                android:layout_width="8dp"
                android:layout_height="match_parent"/>

            <EditText
                android:id="@+id/etHoraEvento"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext"
                android:hint="Hora (HH:mm)"
                android:padding="12dp"
                android:textColor="@android:color/black"
                android:textColorHint="#B87C7C" />
        </LinearLayout>

        <!-- Ubicación -->
        <EditText
            android:id="@+id/etUbicacionEvento"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edittext"
            android:hint="Ubicación"
            android:padding="12dp"
            android:textColor="@android:color/black"
            android:textColorHint="#B87C7C" />

        <!-- Botón Crear Evento -->
        <Button
            android:id="@+id/btnRegistrarE"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#E53935"
            android:text="Crear Evento"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>




