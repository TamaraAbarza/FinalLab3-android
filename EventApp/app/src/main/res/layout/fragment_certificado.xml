<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F7"
    tools:context=".ui.usuario.certificado.CertificadoFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listaCertificados"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="12dp"
        android:clipToPadding="false"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_certificado" />

    <!-- Estado vacío -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="16dp"
    android:visibility="visible"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <!-- Imagen con margen horizontal -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:src="@drawable/box"
    android:contentDescription="Ícono caja vacía" />

    <!-- Texto con márgenes y alineación centrada -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:text="No tenes certificados disponibles aún. ¡Participá en eventos para obtener certificados!"
    android:textSize="18sp"
    android:textColor="#B71C1C"
    android:fontFamily="sans-serif-medium"
    android:gravity="center" />

</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>




